@page
@model IEnumerable<CyberCareWeb.Domain.Entities.ComponentType>

<h2>Типы компонентов</h2>

<a class="btn btn-success mb-3" asp-action="Create">Добавить новый тип компонента</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var componentType in Model)
        {
            <tr>
                <td>@componentType.Id</td>
                <td>@componentType.Name</td>
                <td>@componentType.Description</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@componentType.Id">Изменить</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@componentType.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
